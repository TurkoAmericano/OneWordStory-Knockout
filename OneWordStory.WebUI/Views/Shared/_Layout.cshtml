<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css");
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")



</head>
<body>


    <div class="container">

    <div class="row-fluid">
       <div class="title">One Word Story</div>
        <div class="login">
            
            @if(User.Identity.IsAuthenticated && ViewBag.HideLogin == null)
            {
                @Html.ActionLink("Logout", "Logout", "Home")
            }

        </div>
    </div>

    <div class="row-fluid">


        <div class="col-md-3">
            @RenderSection("StoryList", false)

        </div>

        <div class="col-md-6">

            @RenderBody()

        </div>

        <div class="col-md-3">
            &nbsp;

        </div>


    </div>

    <div id="row-fluid">

    </div>

</body>
</html>
